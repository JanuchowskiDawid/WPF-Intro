<Window x:Class="WPF_intro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_intro"
        mc:Ignorable="d"
        Title="Hello World Window" Height="500" Width="500">
    <StackPanel>
        <TextBox
            x:Name="myTextbox"
            Height="200"
            >
            <TextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Name="miBold" Header="Bold" Click="miBold_Click"
                              IsCheckable="True"/>
                    <MenuItem Name="miNormal" Header="Normal" Click="miNormal_Click"/>


                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>
    </StackPanel>
</Window>
