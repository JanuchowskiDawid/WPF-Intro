<Window x:Class="WPF_intro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_intro"
        mc:Ignorable="d"
        Title="Hello World Window" Height="500" Width="500">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button x:Name="deleteButton" Click="deleteButton_Click">
                    <Image Source="/Images/Rick.jpg" Width="50"></Image>
                </Button>
                <Separator/>
                <Label Content="Fontzise:"></Label>
                <ComboBox x:Name="Cb1" SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBoxItem>6</ComboBoxItem>
                    <ComboBoxItem>8</ComboBoxItem>
                    <ComboBoxItem IsSelected="True">10</ComboBoxItem>
                    <ComboBoxItem>12</ComboBoxItem>
                </ComboBox>
            </ToolBar>
        </ToolBarTray>
        <TextBlock x:Name="myTextBox" Text="Delete tihs by clicking button" FontSize="29"></TextBlock>
    </DockPanel>
</Window>
