<Window x:Class="WPF_intro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_intro"
        mc:Ignorable="d"
        Title="Hello World Window" Height="500" Width="500">
    <DockPanel LastChildFill="False">
        <Button x:Name="progressButton" DockPanel.Dock="Top" Click="progressButton_Click">Increase by 10</Button>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem x:Name="myStackBarItem">
                Loading...
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <ProgressBar x:Name="myProgressBar" Width="200" Height="15" Value="10"/>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
