<Window x:Class="WPF_intro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_intro"
        mc:Ignorable="d"
        Title="Hello World Window" Height="250" Width="300">
    <StackPanel Margin="3">
        <Label FontWeight="Bold">Topings</Label>
        <CheckBox x:Name="cbParent" IsThreeState="True" Checked="cbParent_Checked" Unchecked="cbParent_Unchecked">Select All</CheckBox>
        <CheckBox Margin="15,5" x:Name="cheese" Checked="Cheese_CheckBox_Checked" Unchecked="Cheese_CheckBox_Unchecked">Cheese</CheckBox>
        <CheckBox Margin="15,5" x:Name="ham">Ham</CheckBox>
        <CheckBox Margin="15,5" x:Name="spinach">Spinach</CheckBox>
        <Label>Name</Label>
        <TextBox></TextBox>
        <Label>Password</Label>
        <PasswordBox PasswordChar="°" MaxLength="5"></PasswordBox>
    </StackPanel>
</Window>
