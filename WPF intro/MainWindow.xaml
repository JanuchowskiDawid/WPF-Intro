<Window x:Class="WPF_intro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_intro"
        mc:Ignorable="d"
        Title="Hello World Window" Height="250" Width="300">
    <StackPanel>
        <Label FontWeight="Bold">Pick One</Label>
        <RadioButton x:Name="First" Checked="First_Checked" Unchecked="First_Unchecked" GroupName="first">One</RadioButton>
        <RadioButton GroupName="first">Two</RadioButton>
        <RadioButton GroupName="first">Three</RadioButton>
        <RadioButton GroupName="first">Four</RadioButton>

        <Label FontWeight="Bold">Pick One</Label>
        <RadioButton>One</RadioButton>
        <RadioButton>Two</RadioButton>
        <RadioButton>Three</RadioButton>
        <RadioButton>Four</RadioButton>
    </StackPanel>
</Window>
