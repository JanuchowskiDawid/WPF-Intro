<Window x:Class="WPF_intro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_intro"
        mc:Ignorable="d"
        Title="Hello World Window" Height="500" Width="500">
    <Canvas
        Opacity=".5"
        >
        <Button Canvas.Left="150">Click me</Button>
        <Button Canvas.Right="50">Click me</Button>
        <Rectangle Width="100" Height="100" Panel.ZIndex="2" Fill="Aqua" Canvas.Bottom="0" Canvas.Right="0"></Rectangle>
        <Rectangle Width="100" Height="100" Panel.ZIndex="1" Fill="BlueViolet" Canvas.Bottom="50" Canvas.Right="50"></Rectangle>
    </Canvas>
</Window>
