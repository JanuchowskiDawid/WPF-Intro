<Window x:Class="WPF_intro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_intro"
        mc:Ignorable="d"
        Title="Hello World Window" Height="400" Width="300">
    <StackPanel VerticalAlignment="Center" Margin="20">
        <DatePicker 
            Name="myDatePicker"
            SelectedDate="09.15.2022"
            SelectedDateFormat="Long"
            SelectedDateChanged="myDatePicker_SelectedDateChanged">
            <DatePicker.BlackoutDates>
                <CalendarDateRange Start="09.17.2022" End="09.28.2022"></CalendarDateRange>
            </DatePicker.BlackoutDates>
        </DatePicker>
    </StackPanel>
</Window>
