<Window x:Class="WPF_intro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_intro"
        mc:Ignorable="d"
        Title="Hello World Window" Height="400" Width="300">
    <StackPanel VerticalAlignment="Center" Margin="20">
        <Viewbox Stretch="Uniform">
            <Calendar x:Name="myCalendar"
                      SelectedDate="09.01.2022"
                      DisplayMode="Month"
                      SelectedDatesChanged="myCalendar_SelectedDatesChanged">
                <Calendar.BlackoutDates>
                    <CalendarDateRange Start="09.12.2022" End="12.12.2022"/>
                </Calendar.BlackoutDates>
                
            </Calendar>
        </Viewbox>
            <TextBlock x:Name="myTextBlock"></TextBlock>
    </StackPanel>
</Window>
